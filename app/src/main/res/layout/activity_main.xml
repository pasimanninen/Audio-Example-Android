<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:onClick="resourceAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start playing audio from resource"
        android:id="@+id/resourceAudioButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:onClick="sdcardAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start playing audio from sd card"
        android:id="@+id/sdcardAudioButton"
        android:layout_below="@+id/resourceAudioButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/resourceAudioButton" />

    <Button
        android:onClick="internetAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start playing audio from internet"
        android:id="@+id/internetAudioButton"
        android:layout_below="@+id/sdcardAudioButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/sdcardAudioButton" />

    <Button
        android:onClick="pauseAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pause audio"
        android:id="@+id/pauseAudioButton"
        android:layout_below="@+id/internetAudioButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/restartAudioButton" />

    <Button
        android:onClick="restartAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="restart Audio"
        android:id="@+id/restartAudioButton"
        android:layout_below="@+id/pauseAudioButton"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="stopAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop audio"
        android:id="@+id/stopAudioButton"
        android:layout_below="@+id/restartAudioButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/restartAudioButton" />

</RelativeLayout>
